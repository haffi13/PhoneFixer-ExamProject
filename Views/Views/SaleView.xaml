<UserControl x:Class="Views.SaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             >
    <UserControl.Resources>
        <DataTemplate x:Key="receiptTemplate">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Receipt.Nodes.Name}" />
                <TextBlock Text="{Binding Receipt.Nodes.Price}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1"
              Grid.ColumnSpan="2"
              Grid.Row="1"
              Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DataGrid
            Grid.Column="0"
            Grid.Row="0"
            Margin="10"
            AutoGenerateColumns="True"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True" 
            CanUserResizeRows="False"
            CanUserSortColumns="True"
            SelectionMode="Single"
            IsReadOnly="True"
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding SelectedItem}"
            />

            <DataGrid
            Grid.Column="0"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="True"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True" 
            CanUserResizeRows="False"
            CanUserSortColumns="True"
            SelectionMode="Single"
            IsReadOnly="True"
            ItemsSource="{Binding Services}"
            SelectedItem="{Binding SelectedService}"
            />
            <Grid 
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button
                Content="Remove"
                Grid.Column="1"
                Grid.Row="0"
                Margin="0,10"
                VerticalAlignment="Stretch"
                Command="{Binding RemoveProductCommand}"
                />
                
            </Grid>
            <Grid 
                Grid.Row="1" 
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                
                
            </Grid>
            
            </Grid>


        <Grid
            Grid.Column="3"
            Grid.Row="1"
            Grid.RowSpan="2"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

           <!--- <ListView
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="3"
                Margin="10"
                ItemsSource="{Binding Receipt}"
            </ListView>
                >-->
                

            
                <!--<ItemsControl 
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Margin="10"
                    >
                <StackPanel>
                    <TextBox HorizontalAlignment="Center" Text="{Binding Receipt}"/>
                </StackPanel>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>-->
            
            <!--<StackPanel
                Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Margin="10">
                <Label HorizontalAlignment="Center" Content="{Binding Path=Receipt}" />
            </StackPanel>

            <ItemsControl ItemTemplate="{StaticResource receiptTemplate}" 
                          Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Margin="10">
                
            </ItemsControl>-->

            <ItemsControl 
	            Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="3"
	            ItemsSource="{Binding Receipt}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding ReceiptLine}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid
                Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <Button
                Content="Confirm"
                Grid.Column="0"
                VerticalAlignment="Center"
                Padding="0,30"
                Margin="10,0"
                    Command="{Binding ConfirmCommand}"
                    />
                <Button
                Content="Cancel"
                Grid.Column="1"
                VerticalAlignment="Center"
                Padding="0,30"
                Margin="10,0"
                    Command="{Binding CancelCommand}"
                    />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
